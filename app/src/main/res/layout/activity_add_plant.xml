<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginHorizontal="80dp"
    android:orientation="vertical"
    android:weightSum="100"
    tools:context=".main.AddPlantActivity">

    <ImageView
        android:id="@+id/plant_preview"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="50"
        app:srcCompat="@drawable/ic_plant" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:fontFamily="@font/poppins_medium"
        android:text="Plant Name" />

    <EditText
        android:id="@+id/plant_name"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="7.5"
        android:outlineSpotShadowColor="@color/black"
        android:textSize="15dp"
        android:fontFamily="@font/poppins_regular"
        android:background="@drawable/et_custom"
        android:hint="Cactus"
        android:layout_marginBottom="10dp"
        android:inputType="text"
        android:paddingLeft="10dp"/>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:fontFamily="@font/poppins_medium"
        android:text="Irrigation Period (in hours)" />

    <EditText
        android:id="@+id/irrigation_period"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="7.5"
        android:maxLength="4"
        android:textSize="15dp"
        android:hint="48"
        android:paddingLeft="10dp"
        android:inputType="number"
        android:fontFamily="@font/poppins_regular"
        android:background="@drawable/et_custom"
        android:tooltipText="The duration between when the plants needs to be watered" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10" />

    <Button
        android:id="@+id/submit_plant_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="0"
        android:background="@color/colorPrimary"
        android:textColor="@color/white"
        android:text="Add" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10" />

</LinearLayout>